<li class="question">
  <div class="question__position">
    <%= question.position %>
  </div>

  <div class="question__title">
    <%= link_to question.title, edit_question_path(question) %>
  </div>

  <div class="question__move">
    <%= link_to move_question_path(question, 'higher'), method: :post, class: "#{'invisible' if question.first?}" do %>
      up
      <%#= material_icon.arrow_upward %>
    <% end %>
    <%= link_to move_question_path(question, 'lower'), method: :post, class: "#{'invisible' if question.last?}" do %>
      down
      <%#= material_icon.arrow_downward %>
    <% end %>
  </div>
</li>
