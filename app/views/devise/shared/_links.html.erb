<%- if controller_name != 'sessions' %>
  Hai gi√† un account?
  <%= link_to "Entra", new_session_path(resource_name), class: 'btn btn-outline-success' %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  Non hai un account?
  <%= link_to "Registrati", new_registration_path(resource_name), class: 'btn btn-outline-success' %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  Password dimenticata?
  <%= link_to "Recuperala", new_password_path(resource_name), class: 'btn btn-outline-success' %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  Non hai ricevuto le istruzioni di conferma?
  <%= link_to "Conferma", new_confirmation_path(resource_name), class: 'btn btn-outline-success' %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  Non hai ricevuto le istruzioni di sblocco?
  <%= link_to "Sblocca", new_unlock_path(resource_name), class: 'btn btn-outline-success' %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    Registrati con
    <%= link_to "#{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: 'btn btn-outline-success' %>
  <% end -%>
<% end -%>
